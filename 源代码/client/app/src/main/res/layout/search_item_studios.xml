<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    app:cardCornerRadius="0dp" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:paddingLeft="@dimen/activity_horizontal_padding"
        android:paddingRight="@dimen/activity_horizontal_padding" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_search_studios_item_avator"
            android:layout_width="@dimen/item_avatar_size"
            android:layout_height="@dimen/item_avatar_size"
            android:src="@drawable/schooledin_icon_male_avatar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_padding">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/tv_search_studios_item_studio_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_font_size"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="Simon"/>

                <TextView
                    android:id="@+id/tv_search_studios_item_essays_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_search_users_item_name"
                    android:layout_below="@+id/tv_search_users_item_name"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/small_font_size"
                    android:textColor="@color/grey"
                    android:text="11 文章"  />

            </LinearLayout>

            <include layout="@layout/include_horizontal_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>