<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_favorites_question_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <include layout="@layout/include_vertical_separator"
        android:id="@+id/v_favorites_question_vertical_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/rl_favorites_question_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_padding"
        android:layout_marginRight="@dimen/activity_horizontal_padding" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_padding"
            android:paddingBottom="@dimen/activity_vertical_padding"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_favorites_question_directed_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/small_font_size"
                android:textColor="@color/fentchGrey"
                android:text="计算机软件组" />

            <TextView
                android:id="@+id/tv_favorites_question_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/normal_font_size"
                android:textColor="@color/black"
                android:text="图灵是谁"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_favorites_question_heat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/small_font_size"
                    android:textColor="@color/fentchGrey"
                    android:text="3 热度"/>

                <include layout="@layout/include_dot_separator" />

                <TextView
                    android:id="@+id/tv_favorites_question_supports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/small_font_size"
                    android:textColor="@color/fentchGrey"
                    android:text="12 赞同"/>

                <include layout="@layout/include_dot_separator" />

                <TextView
                    android:id="@+id/tv_favorites_question_created_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/small_font_size"
                    android:textColor="@color/fentchGrey"
                    android:text="2018-09-12 17:20" />

            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/include_horizontal_separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</LinearLayout>