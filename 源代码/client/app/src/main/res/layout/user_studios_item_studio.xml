<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_user_studios_studio_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingLeft="@dimen/activity_horizontal_padding"
    android:paddingRight="@dimen/activity_horizontal_padding"
    android:background="@color/white" >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_user_studios_studio_avatar"
        android:layout_width="@dimen/item_avatar_size"
        android:layout_height="@dimen/item_avatar_size"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/schooledin_icon_female_avatar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_user_studios_studio_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="@dimen/normal_font_size"
                android:textColor="@color/grey"
                android:text="安卓开发小组"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_user_studios_studio_questions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/small_font_size"
                    android:textColor="@color/fentchGrey"
                    android:text="30 问题"/>

                <include layout="@layout/include_dot_separator" />

                <TextView
                    android:id="@+id/tv_user_studios_studio_essays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/small_font_size"
                    android:textColor="@color/fentchGrey"
                    android:text="12 文章"/>

            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/include_horizontal_separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</LinearLayout>